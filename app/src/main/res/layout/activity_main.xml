<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="nl.avans.mm.projectsongkick.presentation.MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorDarkText">

        <EditText
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="4"
            android:id="@+id/searchText"
            android:padding="@dimen/tv_padding"
            android:textColor="@color/colorLightText"
            android:hint="Zoek op artiest ....."
            android:textColorHighlight="@color/colorAccent"
            android:textColorHint="@color/colorLightHint"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="2"
            android:id="@+id/searchButton"
            android:text="ZOEKEN"/>

    </LinearLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:background="@color/colorDarkText"
        app:tabTextColor="@color/colorLightHint"
        app:tabSelectedTextColor="@color/colorAccent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:orientation="vertical">

        <ListView
            android:id="@+id/artists_lv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0"
            android:background="@color/colorDarkText">
        </ListView>

        <!--<TextView-->
        <!--android:id="@id/android:empty"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:background="#FF0000"-->
        <!--android:text="No data"/>-->

        <android.support.v4.view.ViewPager
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorDarkText"/>

    </LinearLayout>

</LinearLayout>