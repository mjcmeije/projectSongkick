<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="nl.avans.mm.projectsongkick.presentation.SelectLocation"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorDarkText">

        <EditText
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="4"
            android:id="@+id/searchText"
            android:padding="@dimen/tv_padding"
            android:textColor="@color/colorLightText"
            android:hint="Kies uw plaats ....."
            android:textColorHighlight="@color/colorAccent"
            android:textColorHint="@color/colorLightHint"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="2"
            android:id="@+id/searchButton"
            android:text="ZOEKEN"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:orientation="vertical">

        <ListView
            android:id="@+id/selectLocation_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorDarkText"
            android:textColor="@color/colorLightText">
        </ListView>


    </LinearLayout>

</LinearLayout>