<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDarkText">

    <ImageView
        android:id="@+id/tvDetailArtistImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="@dimen/layout_padding"/>

    <TextView
        android:id="@+id/tvDetailArtistCalendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvDetailArtistImage"
        android:layout_marginLeft="10dp"
        android:padding="@dimen/tv_padding"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/colorLightText"/>

    <ListView
        android:id="@+id/lvArtistEvent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tvDetailArtistCalendar"/>

    <Button
        android:id="@+id/trackArtist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="31dp"
        android:text="@string/artist_track"
        android:layout_marginTop="72dp"
        android:layout_alignTop="@+id/tvDetailArtistImage"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>